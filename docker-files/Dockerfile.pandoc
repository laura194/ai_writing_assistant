FROM ubuntu:latest

# Avoid prompts during installation
ENV DEBIAN_FRONTEND=noninteractive

# Install Pandoc and a full TeX Live distribution
RUN apt-get update && apt-get install -y --no-install-recommends \
    pandoc \
    texlive-full \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

ENTRYPOINT ["pandoc"]