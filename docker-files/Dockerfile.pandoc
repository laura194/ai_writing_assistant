FROM pandoc/core:latest

# Install LaTeX support for complete PDF/Word conversion
USER root
RUN apk update && apk upgrade && \
    apk add --no-cache \
    texlive \
    texlive-xetex \
    texmf-dist-latexextra \
    texlive-fontutils \
    texlive-bibtexextra \
    texlive-science \
    fontconfig \
    ttf-dejavu \
    && rm -rf /var/cache/apk/*

WORKDIR /workspace
VOLUME ["/workspace"]

ENTRYPOINT ["pandoc"]